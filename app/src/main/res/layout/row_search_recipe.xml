<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="12dp">

    <com.kitchen.mommaskitchen.Utility.CustomImageView
        android:id="@+id/recipe_image"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/recipe_image"
        android:layout_marginHorizontal="16dp"
        android:layout_toRightOf="@id/recipe_image">

        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfpro_bold"
            android:scrollHorizontally="false"
            android:text="Pumpkin Soup"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/tv_prep_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@id/tv_recipe_name"
            android:fontFamily="@font/sfpro_regular"
            android:scrollHorizontally="false"
            android:text="16 mins"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_prep_time"
            android:fontFamily="@font/sfpro_regular"
            android:scrollHorizontally="false"
            android:text="16 ingredients"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="@color/cardview_shadow_start_color"
        android:layout_below="@id/recipe_image"/>

</RelativeLayout>